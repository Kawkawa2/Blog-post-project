<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="style.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Including the header -->
    <%- include('./layouts/header.ejs') %>
    <!-- including the content section -->

    <div class="flex flex-col md:flex-row min-h-screen">
      <!-- Second Main Content Section (Appears on top on small screens) -->
      <div class="w-full md:w-1/3 md:mx-auto px-4 md:sticky md:top-0">
        <!-- Content for the second section -->

        <!-- login & register buttons -->
        <%if(guess && guess===true){%>
        <div
          class="md:max-w-sm w-full bg-white border border-gray-200 rounded-lg shadow p-4 mb-5 md:block hidden"
        >
          <a href="#">
            <h5 class="mb-2 text-lg font-bold tracking-tight text-gray-900">
              <span class="text-2xl hover:text-blue-600">
                Ark-Xperience Community :</span
              >

              Empowering developers worldwide
            </h5>
          </a>
          <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
            Join Arkadians to share, learn, and grow in your coding journey.
          </p>

          <a href="/register">
            <button
              type="button"
              class="text-[#3b82f6] border border-[#1d4ed8] hover:bg-[#1d4ed8] focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-md text-md px-4 py-2 text-center mr-2 mb-1 hover:text-white"
            >
              Create account
            </button>
          </a>
          <a href="/login">
            <button
              type="button"
              class="text-white border border--[#3b82f6] bg-[#3b82f6] focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-md text-md px-4 py-2 text-center mr-2 hover:bg-[#1d4ed8]"
            >
              Log in
            </button>
          </a>
        </div>
        <%}%>
        <!-- popular tags -->
        <div class="md:max-w-sm px-4 py-2 md:mb-5">
          <h5 class="mb-2 text-lg font-bold tracking-tight text-gray-900">
            Popular Tags
          </h5>
          <div class="">
            <%popularTags.forEach(tag => { %>
            <kbd
              class="px-2 py-1.5 leading-10 text-xs font-semibold text-gray-800 hover:text-white bg-gray-100 border border-gray-200 rounded-md hover:bg-gray-400 hover:border-gray-400"
              ><%= '#'+tag._id %></kbd
            >
            <%})%>
            
          </div>
          <a
            href="#"
            class="text-sm font-medium text-blue-500 hover:text-gray-400"
            >See more tags</a
          >
        </div>

        <div class="md:block hidden" id="easy_nav">
          <!-- including the quick navigatiion bar -->
          <%- include('./layouts/quickNav.ejs') %>
        </div>
      </div>

      <!-- First Main Content Section -->
      <div class="md:w-2/3 border-l border-gray-300 px-4 py-2 overflow-auto">
        <!-- including the success messages here  in green alerts-->
        <%- include('./partials/success_messages.ejs') %>

        <div class="mx-auto px-4">
          <!-- including the tabs -->
          <%- include('./layouts/tabs.ejs') %>
        </div>

        <!-- Content for the feed section -->
        <div class="mx-auto p-4">
          <!-- Content goes here -->

          <!-- Content for the feed section -->
          <div class="mx-auto p-4"><%- include('./layouts/feeds.ejs') %></div>
        </div>
      </div>
    </div>

    <script src="flowbite/dist/flowbite.min.js"></script>
  </body>
</html>
